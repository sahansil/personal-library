generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  name            String
  email           String  @unique
  password        String
  phone_number    String?
  profile_picture String?
}

model Books {
  id             Int            @id @default(autoincrement())
  title          String
  pages          Int
  published_date DateTime
  blurb          String?
  cover_image    String?
  Genre          Genres         @relation(fields: [genresId], references: [id])
  genresId       Int
  BooksAuthors   BooksAuthors[]
}

model Genres {
  id    Int     @id @default(autoincrement())
  name  String
  Books Books[]
}

model Authors {
  id           Int            @id @default(autoincrement())
  name         String?
  bio          String?
  BooksAuthors BooksAuthors[]
}

model BooksAuthors {
  id       Int @id @default(autoincrement())
  bookId   Int
  authorId Int

  Books   Books   @relation(fields: [bookId], references: [id])
  Authors Authors @relation(fields: [authorId], references: [id])
}
